@model IEnumerable<task.Models.task3>

@{
    ViewBag.Title = "Index";

}



<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Our <span>products</span>
            </h2>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {

            <div class="col-sm-6 col-md-4 col-lg-4">
                <div class="box">
                    <div class="option_container">
                        <div class="options">
                          
                        </div>
                    </div>
                    <div class="img-box">
                        <img src="~/image/@item.img" alt="" style="width:220px ; height : 200px">
                    </div>
                    <div class="detail-box">
                        <h5>
                           @item.First_Name
                        </h5>
                        <h6>
                            @item.jop_title
                        </h6>
                    </div>
                </div>
            </div>


            }
    </div>
    </div>
    
</section>